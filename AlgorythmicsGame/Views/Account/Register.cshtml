@model RegisterViewModel
@{
    ViewData["Title"] = "profile_register_title";
}
<link rel="stylesheet" href="~/css/authentication.css" />

<div class="authentication">
    <h2 style="padding-left:50px; padding-top:20px">@ViewData["Title"]</h2>

    <div class="row register" style="padding:50px">
        <div class="col-lg-12">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4>"profile_register_description"</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label asp-for="Email"></label><span class="required">*</span>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-6">
                        <label>"profile_register_password"</label><span class="required">*</span>
                        <span class="addition">"profile_register_password_hint"</span>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-6">
                        <label>"profile_register_confirm_password"</label></label><span class="required">*</span>
                        <span class="addition">&nbsp;</span>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-6">
                        <label>"profile_register_studies"</label></label><span class="required">*</span>
                        <select asp-for="Studies" class="form-control">
                            <option> "profile_register_studies_mechatronics"]</option>
                            <option> "profile_register_studies_mechanical"]</option>
                            <option> "profile_register_studies_computer"]</option>
                            <option> "profile_register_studies_automation"]</option>
                            <option> "profile_register_studies_informatics"]</option>
                            <option> "profile_register_studies_telecom"]</option>
                            <option> "profile_register_studies_landscape"]</option>
                            <option> "profile_register_studies_horticulture"]</option>
                            <option> "profile_register_studies_communication"]</option>
                            <option> "profile_register_studies_publichealth"]</option>
                            <option> "profile_register_studies_translator"]</option>
                            <option> "profile_register_studies_other"]</option>
                        </select>
                        <span asp-validation-for="Studies" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-6">
                        <label>"profile_register_grade"]</label><span class="required">*</span>
                        <input asp-for="Grade" min="1" max="4" class="form-control" />
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-6">
                        <label>"profile_register_bday"]</label><span class="required">*</span>
                        <input type="date" asp-for="DateofBirth" class="form-control" />
                        <span asp-validation-for="DateofBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-6">
                        <label>"profile_register_gender"</label><span class="required">*</span>
                        <select asp-for="Gender" class="form-control">
                            <option>"profile_register_gender_female"</option>
                            <option>"profile_register_gender_male"</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label>"profile_register_skills"</label>
                        <textarea rows="5" asp-for="ITSkills" class="form-control" placeholder="profile_register_skills_placeholder"></textarea>
                        <span asp-validation-for="ITSkills" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <h3>"profile_register_consent_title"</h3>
                        "profile_register_consent_text"
                        <p><input class="agreement" type="checkbox" onclick="if (this.checked) { $('#submitButton').prop('disabled',false)} else { $('#submitButton').prop('disabled',true)}" />  "profile_register_consent_checkbox"]</p>
                        <button id="submitButton" type="submit" disabled class="btn btn-default">"profile_register_submit"</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
