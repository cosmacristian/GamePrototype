@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "LoginTitle";
}

<link rel="stylesheet" href="~/css/authentication.css" />
<div class="authentication">


    <h2 style="padding-left:50px; padding-top:50px">@ViewData["Title"]</h2>

    <div class="login" style="padding:50px">

        <div class="col-md-4 login-content">
            <section>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <h4>"profile_login_local_title"</h4>
                    <span class="text-danger">"ErrorMsg"</span>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>"profile_login_local_password"</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox remember">
                            <label>
                                "profile_login_local_remember"
                            </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <input asp-for="RememberMe" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" id="submitButton" class="btn btn-default">"profile_login_local_submit"</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-action="ForgotPassword">"profile_login_forgot"</a>
                        </p>
                        <p>
                            <a asp-action="Register" asp-route-returnurl="@ViewData[" ReturnUrl"]">"profile_login_register"</a>
                        </p>
                    </div>
                </form>
            </section>
            <section>
                <h4>"profile_login_external"</h4>
                <hr />
                @{
                    var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                    if (loginProviders.Count == 0)
                    {
                        <div>
                            <p>
                                "profile_login_no_external"
                            </p>
                        </div>
                    }
                    else
                    {
                        <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in loginProviders)
                                    {
                                        <button type="submit" class="btn btn-default" name="provider" id="submitButton" value="@provider.Name" title="profile_login_external_click @provider.DisplayName ">@provider.Name</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
        @*<div class="col-md-6 col-md-offset-2">*@

            
            <img src="~/images/authentication/login.png" />
        @*</div>*@
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
