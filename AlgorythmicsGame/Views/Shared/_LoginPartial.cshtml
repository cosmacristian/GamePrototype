@using Microsoft.AspNetCore.Identity
@using AlgorythmicsGame.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<ul class="nav navbar-nav navbar-right navigationRight">
    <li>
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Profile"> <span style="margin-top:-8px" class="glyphicon glyphicon-user"></span>"front_login_partial_hello"] @UserManager.GetUserName(User)!</a>
    </li>
    <li>
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <button type="submit" class="btn-link navbar-btn navbar-link logoutNav">"front_login_partial_logout"</button>
        </form>
    </li>
</ul>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Account" asp-action="Register">"front_login_partial_register"]</a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Login">"front_login_partial_login"]</a></li>
</ul>
}
