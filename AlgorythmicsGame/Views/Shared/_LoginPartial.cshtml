@using Microsoft.AspNetCore.Identity
@using AlgorythmicsGame.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<ul class="nav navbar-nav navbar-right navigationRight">
    <li>
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Profile"> <span style="margin-top:-8px" class="glyphicon glyphicon-user"></span>Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li>
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <button type="submit" class="btn-link navbar-btn navbar-link logoutNav">"Log out</button>
        </form>
    </li>
</ul>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
</ul>
}
